<?xml version="1.0" encoding="UTF-8"?>
<wizard version="1" kind="project"
        class="qmakeproject" firstpage="10"
        id="A.Simpleqmake" category="H.Project">
    <icon>console.png</icon>
    <description>Creates a simple qmake project for experiments.</description>
    <displayname>Simple qmake</displayname>;
    <displaycategory>Other Project</displaycategory>
    <files>
        <file source="main.cpp" openeditor="true"/>
        <file source="project.pro" target="%ProjectName%.pro" openproject="true"/>
    </files>
    <fieldpagetitle>Simple qmake Project Parameters</fieldpagetitle>
    <fields>
        <field name="QT">
            <fieldcontrol class="QCheckBox"/>
            <fielddescription>Include Qt Modules</fielddescription>
        </field>
        <field name="QT4SUPPORT">
            <fieldcontrol class="QCheckBox"/>
            <fielddescription>Support Qt 4 qmake</fielddescription>
        </field>
        <field name="CONSOLE">
            <fieldcontrol class="QCheckBox"/>
            <fielddescription>Console Project Only</fielddescription>
        </field>
        <field name="CPP11INITS">
            <fieldcontrol class="QCheckBox"/>
            <fielddescription>C++11 Brace Initializer Syntax</fielddescription>
        </field>
        <field name="MODULES">
            <fieldcontrol class="QLineEdit" defaulttext="" placeholdertext="Enter other Qt modules"/>
            <fielddescription>Other Qt Modules, space separated:</fielddescription>
        </field>
        <field name="OBJECT">
            <fieldcontrol class="QLineEdit" defaulttext="" placeholdertext="Enter class name"/>
            <fielddescription>Optional QObject-derived class to define:</fielddescription>
        </field>
    </fields>
</wizard>
